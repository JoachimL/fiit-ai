@model Strongr.Web.Models.WorkoutViewModels.DeleteViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Confirm Delete</h2>
<p>If you are sure you wish to delete the workout started on @Model.DateTimeOffset, click "Delete" below.</p>

<form asp-action="Delete" method="post" asp-route-id="@Model.WorkoutId">
    <button type="submit" class="btn btn-danger">
        <span class="glyphicon glyphicon-trash"></span> Delete
    </button>
</form>
